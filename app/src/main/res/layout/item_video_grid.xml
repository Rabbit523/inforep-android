<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <infopanel.theappchief.com.infopanel.MyTextView
        android:id="@+id/textView"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:ellipsize="end"
        android:paddingLeft="6dp"
        android:maxLines="1"
        android:layout_alignLeft="@+id/iv_thumbnail"
        android:layout_alignRight="@id/iv_thumbnail"
        android:layout_alignBottom="@id/iv_thumbnail"
        android:textColor="@color/colorVideoText"
        android:background="@color/darkTransparent"
       />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_play"
        android:layout_centerInParent="true"/>

</RelativeLayout>
