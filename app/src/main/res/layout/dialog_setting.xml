<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="500dp"
        android:background="@drawable/ic_rounded_dialog_dark"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lock"/>

                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="DISARMED"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_battery"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/icon_wifi"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"

                    android:src="@drawable/ic_blutooth_white"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"

                    android:src="@drawable/icon_network"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal"
            android:layout_marginRight="32dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_mute"/>
            <SeekBar
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:theme="@style/SeekBarColor"
                android:progress="100"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_speaker"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal"
            android:layout_marginRight="32dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_bright_empty"/>
            <SeekBar
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:progress="100"

                android:theme="@style/SeekBarColor"

                android:layout_marginLeft="16dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_bright"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="48dp"
                    android:src="@drawable/icon_spanner"
                    android:layout_height="48dp" />
                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:text="SETTINGS"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:src="@drawable/ic_message_circle"
                    android:layout_height="48dp" />
                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:text="MESSAGE\nALERTS"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:src="@drawable/ic_photo_frame"
                    android:layout_height="48dp" />
                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:text="PHOTO\nFRAME"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:src="@drawable/clean_screen"
                    android:layout_height="48dp" />
                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="CLEAN\nSCREEN"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:src="@drawable/icon_world"
                    android:layout_height="48dp" />
                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:text="Espanol"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_dismiss"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dismiss_icon_menu"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
