<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/outside"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/layout_inside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:windowMinWidthMajor = "100%"
        android:windowMinWidthMinor = "100%"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_rounded_background"
        android:layout_margin="18sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:weightSum="3"

            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_contactus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:maxLines="1"
                android:layout_marginLeft="12dp"
                android:ellipsize="end"
                android:layout_height="32dp"
                android:textSize="12sp"
                android:text="CONTACT US"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ic_rounded_button_active_left"/>

            <Button
                android:id="@+id/videoView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_height="32dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="VIDEO TUTORIALS"
                android:background="@drawable/ic_rounded_button_deactive_center"/>

            <Button
                android:id="@+id/btn_message"
                android:layout_width="0dp"
                android:textSize="9sp"
                android:padding="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_marginRight="12dp"

                android:layout_height="32dp"
                android:text="MESSAGES/ALERTS/ALARMS"
                android:background="@drawable/ic_rounded_button_deactive_right"/>
        </LinearLayout>

        <GridView
            android:visibility="gone"
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"

            android:numColumns="4"/>

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="49dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon_message"/>

            <infopanel.theappchief.com.infopanel.MyTextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:text="Dealer"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom|center_horizontal">

                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Please contact your Dealer for assitance"/>

                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:text="1234567890"/>

                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:text="website.com"/>
        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/colorGray">
            <ImageView
                android:layout_width="32dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_circle"
                android:layout_height="32dp"/>

            <infopanel.theappchief.com.infopanel.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Ackknowledge All"
                android:textSize="17sp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
