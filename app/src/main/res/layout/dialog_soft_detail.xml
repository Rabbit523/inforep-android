<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="260dp"
        android:orientation="vertical">

        <infopanel.theappchief.com.infopanel.MyTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="4dp"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:text="Software DETAILS"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textDigree"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingTop="6dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="17sp"
                        android:text="Software Version:"/>
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:layout_marginTop="-4dp"

                        android:gravity="top"
                        android:text="2.2.1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="17sp"
                        android:text="BUILD NUMBER:"/>
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:gravity="top"
                        android:layout_marginTop="-4dp"

                        android:text="20180831v"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="17sp"
                        android:text="LINUX VERSION:"/>
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:gravity="top"
                        android:layout_marginTop="-4dp"

                        android:text="3.4.1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="17sp"
                        android:text="ANDROID VERSION:"/>
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:layout_marginTop="-4dp"

                        android:gravity="top"
                        android:text="5.9.0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="17sp"
                        android:text="Patch Description "/>
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="top"
                        android:layout_marginTop="-4dp"

                        android:textSize="14sp"
                        android:text="Details of all applied patches"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="17sp"
                        android:text="Last upgrade date:"/>
                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:gravity="top"
                        android:layout_marginTop="-4dp"
                        android:text="2018-08-08 12:54:00"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
        <infopanel.theappchief.com.infopanel.MyTextView
            android:id="@+id/tv_cancel"
            android:background="#728082"
            android:layout_height="40dp"
            android:text="CANCEL"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_width="match_parent"/>
    </LinearLayout>

</LinearLayout>
