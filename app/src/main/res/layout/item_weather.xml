<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_rounded_background"
        android:orientation="vertical">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/icon_cloud"/>

        <infopanel.theappchief.com.infopanel.MyTextViewSemiBold
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>

        <infopanel.theappchief.com.infopanel.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARTLY SUNNY"
            android:textSize="14sp"
            android:layout_marginTop="12sp"/>

        <infopanel.theappchief.com.infopanel.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H85 ° L 58°"
            android:textSize="14sp"
            android:layout_marginTop="12sp"/>
    </LinearLayout>


</LinearLayout>
