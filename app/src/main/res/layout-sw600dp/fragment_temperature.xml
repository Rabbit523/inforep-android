<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TemperatureFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:background="@drawable/ic_rounded_background">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_weight="1.6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_up"
                    android:layout_width="40dp"
                    android:src="@drawable/arrow_up"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1">

                <infopanel.theappchief.com.infopanel.MyTextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="70"
                    android:textColor="@color/textDigree"
                    android:textSize="60sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_down"
                    android:layout_width="40dp"
                    android:src="@drawable/arrow_down"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>

        <infopanel.theappchief.com.infopanel.MyTextView
            android:id="@+id/tv_digree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/textDigree"
            android:text="o"
            android:textSize="50sp"
            android:layout_marginBottom="50dp"
            android:layout_weight="0.5">
        </infopanel.theappchief.com.infopanel.MyTextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <infopanel.theappchief.com.infopanel.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME THERMOSTAT"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"/>

            <infopanel.theappchief.com.infopanel.MyTextView
                android:id="@+id/tv_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COOL"
                android:textColor="@color/textDigree"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="right">

                <ImageView
                    android:id="@+id/iv_fan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fan_on" />

                <ImageView

                    android:id="@+id/iv_cool"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/cool" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="16dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_battery" />

                    <infopanel.theappchief.com.infopanel.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(80%)"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">
                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textSize="46sp"
                    android:text="70.0Â°"/>

                <infopanel.theappchief.com.infopanel.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:text="Current Temperature"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>